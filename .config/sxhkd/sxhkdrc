#--------------------
# bspwm hotkeys
#--------------------

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
super + shift + s
	bspc node -g sticky

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap the node in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east} --follow

# change stacking
super + control + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Move current window to a pre-selected space
super + control + m
    bspc node -n last.!automatic

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# focus the next/previous desktop in the current monitor
control + alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the next/previous desktop in the current monitor
control + alt + {h,l}
	bspc desktop -f {prev,next}.local

# focus the next/previous monitor
control + super + {Left,Right}
	bspc monitor -f {prev,next}

# focus the next/previous monitor
control + super + {h,l}
	bspc monitor -f {prev,next}

# focus the last node
super + Tab
	bspc node -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + alt + {h,j,k,l}
	wm_resize {left, up, down, right}

super + m
  desk=`bspc query -D -d focused`; \
  bspc desktop -m next; \
  bspc monitor -f next; \
  bspc desktop -f $desk


#--------------------
# display setup scripts
#--------------------

super + { F9, F10, F11, F12 }
	display-switch { left, ext, right, main }


#--------------------
# rofi
#--------------------

control + alt + Delete
	power-menu

super + @space
	program-launcher

#--------------------
# function keys
#--------------------

XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10

XF86AudioRaiseVolume
	speaker-control sink "@DEFAULT_SINK@" up && polybar-msg hook speaker 1 &

XF86AudioLowerVolume
	speaker-control sink "@DEFAULT_SINK@" down && polybar-msg hook speaker 1 &

XF86AudioMute
	speaker-control sink "@DEFAULT_SINK@" toggle-mute && polybar-msg hook speaker 1 &

XF86AudioMicMute
	speaker-control source "@DEFAULT_SOURCE@" toggle-mute && polybar-msg hook microphone 1 &


#--------------------
# application shortcuts
#--------------------

# terminal emulator
super + Return
	$TERMINAL

# browser
super + b
	$BROWSER

super + c
	$IDE

super + g
	galculator

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


